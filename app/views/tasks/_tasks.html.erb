<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>Telefon</th>
      <th>Kaedah</th>
      <th>email</th>
      <th>no-tix</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.website_name %></td>
        <td><a href="https://wa.me/<%= task.mys_num %>" ><%= task.no_fon%></a></td>
        <td><%= task.kaedah %></td>
        <td><%= task.email_client %></td>
        <td><%= task.no_tix %></td>
        <td><%= distance_of_time_in_words(task.created_at, Time.now) %> ago</td>
        <% unless false %>

        <td><%= link_to 'Show', task %></td>
        <% else %>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>